{% block breakingnews %}
    <!-- Breaking News Section Start -->
    <style>
        .blog-section{
            background: #ecedf0;
            padding-top: 20px;
            margin-top: 0;
        }
    </style>
    <div class="breaking-news-section section">
        <div class="container">
            <div class="row">
                <div class="col-12">

                    <!-- Breaking News Wrapper Start -->
                    <div class="breaking-news-wrapper">

                        <!-- Breaking News Title -->
                        <h5 class="breaking-news-title float-left">événements</h5>

                        <!-- Breaking Newsticker Start -->
                        <ul class="breaking-news-ticker float-left">
                            {% for event in events %}
                                <li><a href="{{ absolute_url(asset('')) }}app_dev.php/user/evenement/showevent/{{ event.idEvent }}">{{ event.title }}</a></li>
                            {% endfor %}
                        </ul><!-- Breaking Newsticker Start -->

                        <!-- Breaking News Nav -->
                        <div class="breaking-news-nav">
                            <button class="news-ticker-prev"><i class="fa fa-angle-left"></i></button>
                            <button class="news-ticker-next"><i class="fa fa-angle-right"></i></button>
                        </div>

                    </div><!-- Breaking News Wrapper End -->

                </div>
            </div>
        </div>
    </div><!-- Breaking News Section End -->
{% endblock %}
{% block body %}
    <style>
        section.container {
            margin-bottom: 40px;
            margin-top: 20px;
        }
    </style>
    <section class="container">
        <div class="panel-body">
            <table class="table table-bordered table-striped mb-none" id="datatable-default">
                <thead>
                <tr>
                    <th>Photo</th>
                    <th>Title</th>
                    <th>Type</th>
                    <th>Date Debut</th>
                    <th>Date Fin</th>
                    <th>Ville</th>
                    <th>Creator</th>
                    <th>Action</th>
                </tr>
                </thead>
                <tbody>
                {% for event in user.idEvent %}
                    <tr>
                        <td><img src="{{ absolute_url(asset('files/')) }}{{ event.media }}" width="40" height="40"  /></td>
                        <td>{{ event.title }}</td>
                        <td>{{ event.type }}</td>
                        <td>{{ event.dateStart|date}}</td>
                        <td>{{ event.dateFin|date}}</td>
                        <td>{{ event.ville }}</td>
                        <td>
                            {% if event.idAdmin == NULL %}
                                {% for part in event.idPartenaire %}
                                    {% if loop.first %}
                                        {{ part.nom }}
                                    {% endif %}
                                {% endfor %}
                            {% else %}
                                <img src="{{ absolute_url(asset('files/Alesco.jpg')) }}" width="35" height="35"  title="Alecso"/>
                            {% endif %}
                        </td>
                        <td>
                            <center>
                                <a href="{{ absolute_url(asset('')) }}app_dev.php/user/evenement/showevent/{{ event.idEvent }}" class="btn btn-success btn-xs ml-1">Afficher</a>
                                <a href="{{ absolute_url(asset('')) }}app_dev.php/user/evenement/annuler/{{ event.idEvent }}" class="btn btn-warning btn-xs ml-1">Annuler Participation</a>
                            </center>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td>No Records Found!</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </section>
{% endblock %}
